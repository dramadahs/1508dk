<style>
  header {
    position: sticky;
    display: flex;
    background-color: var(--white-color);
    align-items: center;
    justify-content: space-between;
    padding: var(--top-padding) var(--main-padding);
    max-height: 60px;
  }

  a img {
    position: absolute;
    z-index: 100;
    top: 50%;
    transform: translateY(-50%);
    max-width: 50px;
  }

  ul {
    min-height: 50px;
    display: flex;
    gap: 50px;
    align-items: center;
  }

  ul li {
    list-style: none;
  }

  .hamburger-menu {
    display: none;
  }
  @media (max-width: 1330px) {
    header {
      padding: var(--top-padding) calc(var(--main-padding) / 2);
    }
    ul {
      display: none;
    }

    .hamburger-menu {
      display: block;
      height: 50px;
      width: 50px;
      position: relative;
      z-index: 100;
      margin-left: auto;
      padding-right: var(--main-padding);
    }

    .hamburger-menu span {
      display: block;
      height: 5px;
      width: 100%;
      background-color: var(--black-color);
      border-radius: 30px;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      transition: 0.3s ease;
    }

    .hamburger-menu span:nth-child(1) {
      top: 25%;
    }

    .hamburger-menu span:nth-child(3) {
      top: 75%;
    }

    .hamburger-menu.active span:nth-child(1) {
      top: 50%;
      transform: translate(-50%, -50%) rotate(45deg);
    }

    .hamburger-menu.active span:nth-child(2) {
      opacity: 0;
    }
    .hamburger-menu.active span:nth-child(3) {
      top: 50%;
      transform: translate(-50%, -50%) rotate(-45deg);
    }

    nav.menu-open {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      position: fixed;
      inset: 0;
      background-color: var(--white-color);
      gap: 30px;
      z-index: 99;
    }

    nav.menu-open ul {
      display: flex;
      flex-direction: column;
    }

    nav.menu-open ul li {
      text-align: center;
      padding: 15px;
    }
    nav.menu-open ul li:nth-child(3) {
      order: -2;
    }

    .menu-button {
      font-size: 30px;
    }
  }
</style>

<script>
  const hamburgerMenu = document.querySelector(".hamburger-menu");
  const nav = document.querySelector("nav");

  hamburgerMenu.addEventListener("click", () => {
    hamburgerMenu.classList.toggle("active");
    nav.classList.toggle("menu-open");
  });
</script>
