    border-top: 2px solid var(--white-color);
    padding-bottom: 2em;
  }
  .dankort-hand {
    margin: auto;
    width: auto;
  }

  .text-and-arrow,
  .text-and-arrow1 {
    display: flex;
    max-width: 500px;
    justify-content: space-between;
    margin-top: 2em;
    padding: 0em 2em;
  }

  .text-and-arrow1 {
    border-bottom: 2px solid var(--white-color);
    padding-bottom: 2em;
  }
  .p-bold {
    font-size: var(--p-font-size);
  }

  .arrow-icon {
    width: auto;
    height: 32px;
  }

  /* FORBRUGSRECAP */

  .recap-section {
    text-align: center;
    margin: 5em;
  }

  .recap-cards-section {
    margin-top: 3em;
  }

  /* GREEN PASS */

  .green-section {
