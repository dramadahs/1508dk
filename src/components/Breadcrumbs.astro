---
const {pageUrl_2, pageName_2, pageUrl_3, pageName_3} = Astro.props;
---

<nav class="breadcrumbs">
  <a href="/">Forbrugstjekket</a>
  <a href={pageUrl_2}>{pageName_2}</a>
  <a href={pageUrl_3}>{pageName_3}</a>
</nav>

<style>
  nav {
    padding: var(--main-padding) var(--main-padding) 0;
    background-color: var(--primary-color);
  }

  .breadcrumbs a + a::before {
    content: ">";
    padding: 0 5px;
    color: var(--black-color);
  }

  a:hover {
    text-decoration: underline;
  }
</style>
